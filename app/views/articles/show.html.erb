<div class="container">

  <div class="row" style="margin-top: 20px;">
    <div class="back-button">
      <%= link_to 'Retour', articles_path %>
    </div>
      <% if user_signed_in? %>
      <div class="edit-button">
        <%= link_to 'Modifier', edit_article_path(@article) %>
      </div>
      <div class="delete-button">
        <%= link_to 'Supprimer', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
      <% end %>
  </div>

  <div class="article-title row">
    <h1><%= @article.title %></h1>
  </div>
  <div class="row">
    <div class="description col-sm-8">
      <textarea readonly cols="70" rows="20"><%= @article.description %></textarea>
    </div>
    <div class="personnage2 col-sm-4">
     <%= cl_image_tag("perso2_ia2jri.png", :height=>450, :width=>400, :crop=>"scale") %>
    </div>
  </div>

  <div class="document row">
    <% if @article.photo.attached? %>
      <div class="picture1 col">
       <!--  <input type="checkbox" id="zoomCheck"> -->
       <!--  <label for="zoomCheck"> -->
          <%= cl_image_tag @article.photo.key, height: 450, width: 550, crop: :fit %>
       <!--  </label> -->
      </div>
    <% end %>

    <% if @article.video.attached? %>
      <div class="video1 col">
        <%= cl_video_tag @article.video.key, height: 400, width: 500, crop: :fit, quality: :auto, :video_codec=>"auto", :controls => true %>
      </div>
    <% end %>
  </div>

</div>

